CREATE TABLE tblUsers(
	id varchar(30) PRIMARY KEY,  				-- 유저 아이디
	pw varchar(30) NOT NULL, 				-- 유저 비밀번호
	name varchar(30) NOT NULL,     				-- 유저 이름
	lv int(1) DEFAULT (1) NOT NULL, 			-- 유저 등급
	regdate TIMESTAMP DEFAULT NOW() 			-- 생성일
);

INSERT INTO servlet_test.tblUsers(id, pw, name, lv, regdate) VALUES('hong', '1111', '홍길동', DEFAULT, DEFAULT);
